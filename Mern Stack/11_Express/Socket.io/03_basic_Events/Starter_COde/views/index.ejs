<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- The character encoding used for the document -->
        <meta charset="UTF-8">

        <!-- Viewport meta tag to ensure the page is responsive on different devices -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- The title displayed in the browser tab -->
        <title>Document</title>
    </head>
    <body>

        <!-- A header element to display a greeting message on the page -->
        <h1>Hello From Client</h1>
    

        <!-- Including Socket.io library from CDN to allow real-time communication -->
        <script src="https://cdn.socket.io/3.1.3/socket.io.min.js"
            integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh"
            crossorigin="anonymous"></script>

        <script>
            // Establish a connection to the server via Socket.io
            const socket = io();

            // This event listener waits for the connection to the server
            socket.on('connect', () => {
                console.log('Connected to server');
            });

            // Listening for the 'chat message' event from the server
            socket.on("chat message", (arg) => {
                console.log(arg); // Print the received message (e.g., "Hello World kese ho")
            });
        </script>

    </body>
</html>
